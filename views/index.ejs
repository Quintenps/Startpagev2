<!DOCTYPE html>
<html>
  <head>
    <title>Startpage</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="data:image/x-icon;base64,"
      rel="icon"
      type="image/x-icon"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cousine&display=swap" rel="stylesheet">
  </head>
  <body>
    <div id="container">
      <div id="main" class="row">
        <div id="links">
          <% for (const [category] of Object.entries(config.links)){ %>
          <div class="col">
            <h2><%= category %></h2>
            <ul>
              <% for (const [title, link] of
              Object.entries(config.links[category])){ %>
              <li><a href="<%- link %>"><%- title %></a></li>
              <% } %>
            </ul>
          </div>
          <% } %>
        </div>
        <div id="art">
          <img src="<%= config.image %>" id="artObjectImage" class="fade-in" />
        </div>
      </div>
      <div id="rss" class="row">
        <h2>news</h2>
        <div id="rssItems">
          <ul>
            <% rssItems.forEach(function(item){ %>
            <li><a href="<%- item.link %>"><%- item.title %></a></li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("keypress", function (e) {
        if (e.code === "Minus") {
          changeTheme();
        }
      });

      let links = document.getElementById("links");
      let rss = document.getElementById("rss");
      let theme = localStorage.getItem("theme");

      if (theme === "dark") {
        document.documentElement.classList.toggle("dark-mode");
      }

      function changeTheme() {
        localStorage.setItem("theme", theme === "light" ? "dark" : "light");
        document.documentElement.classList.toggle("dark-mode");
      }
    </script>
  </body>
</html>
